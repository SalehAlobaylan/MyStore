{
  "name": "mystore",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "backend:install": "npm install",
    "frontend:install": "cd app/MyStore && npm install",
    "start:frontend": "cd app/MyStore && ng serve",
    "start:backend": "tsx -r dotenv/config app/backend/server.ts",
    "dev:backend": "nodemon --exec tsx -r dotenv/config app/backend/server.ts", 
    "frontend:Build": "cd app/MyStore && ng build",
    "test:backend": "curl --retry 5 --retry-delay 3 --retry-connrefused http://localhost:3000/api/products",
    "ci:backend": "npm run start:backend & npm run test:backend && kill $!"

  },
  "dependencies": {
    "cors": "^2.8.5",
    "dockerize": "^0.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "nodemon": "^3.0.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
